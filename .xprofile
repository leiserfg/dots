#!/usr/bin/env sh

export QT_AUTO_SCREEN_SCALE_FACTOR=1
ratio=$(xrandr | grep -w connected| head -n1| sed -E 's|.*primary ([0-9]+)x.* ([0-9]+)mm x.*|scale=0;(\1/(\2/25.4))/96|'|bc)

if [ $ratio -gt 2 ]; then
    dpi=216
    printf "Xft.dpi: $dpi\n*dpi: $dpi"|xrdb -merge
fi

export TERMINAL=$TERMCMD

export PATH=$HOME/.local/bin/:$PATH

#Apps
export BROWSER=firefox-developer-edition
export TERMCMD=kitty

